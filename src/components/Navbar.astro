---
import myLogo from "../../public/my_logo.png";
export interface INavbarProps {
  logoLink: string;
  aboutLink: string;
  projectsLink: string;
  logoName: string;
  aboutName: string;
  projectsName: string;

  socialOne: string;
  socialTwo: string;
  socialThree: string;

  socialOneLink: string;
  socialTwoLink: string;
  socialThreeLink: string;

  internalClass: string;
}
const {
  logoLink, aboutLink, projectsLink,
  logoName, aboutName, projectsName,
  socialOne, socialTwo, socialThree,
  socialOneLink, socialTwoLink, socialThreeLink,
  internalClass
} = Astro.props;
---

<nav id="navbar">

  <div class="links-container">

    <div class="nav internal-links">
      <a class={`nav internal ${internalClass} logo`} href={logoLink}>{logoName
        ? logoName : <img class="my-logo" src={myLogo} width="40px" height="40px" /> } </a>

      {aboutName ? <a target="_blank" rel="noopener noreferrer" class={`nav internal ${internalClass} about`}
        href={aboutLink}>{aboutName} </a> : <a class={`nav internal ${internalClass} about`} href={aboutLink}>about</a>}

      {projectsName ? <a target="_blank" rel="noopener noreferrer" class={`nav internal ${internalClass} about`}
        href={projectsLink}>{projectsName}</a> : <a class={`nav internal ${internalClass} about`}
        href={projectsLink}>projects</a>}

    </div>

    <div class="nav external-links">
      <a class="nav social social-one" target="_blank" rel="noopener noreferrer" href={socialOneLink}><img
          class="nav social-icon" src={socialOne}></a>
      <a class="nav social social-two" target="_blank" rel="noopener noreferrer" href={socialTwoLink}>
        <img class="nav social-icon" src={socialTwo}>
      </a>
      <a class="nav social social-three" target="_blank" rel="noopener noreferrer" href={socialThreeLink}>
        <img class="nav social-icon" src={socialThree}>
      </a>
    </div>

  </div>

</nav>

<style>
  .my-logo {
    filter: var(--filter-color);
  }

  nav {
    padding: 0.5em 2em;
    justify-self: center;
    position: sticky;
    top: 0;
    font-family: JostMedium, sans-serif;
    z-index: 2;
    opacity: 1;
    transition: transform 100ms ease-in-out, opacity 200ms ease-in-out;
    transition-delay: 0ms;
    transform: translateY(0%);
  }

  nav.hide {
    opacity: 0;
    transition: transform 100ms ease-in-out, opacity 200ms ease-in-out;
    transition-delay: 0ms;
    transform: translateY(-100%);
  }

  .internal {
    text-decoration: none;
    width: fit-content;
    scroll-behavior: smooth;
  }

  .internal:active {
    text-decoration: none;
    color: none;
  }


  @media (max-width: 450px) {
    #navbar {
      justify-content: space-around;
      padding: 0 0.6em;
    }

    .internal-links {
      justify-items: center;
    }

    .external-links {
      display: none;
      visibility: hidden;
      position: absolute;
    }
  }

  a.nav {
    font-size: var(--font-size-base);
  }

  .links-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  }

  div.nav {
    display: grid;
    grid-auto-flow: column;
  }

  div.nav:last-of-type {
    justify-content: center;
    text-align: center;
    gap: 1em;
    justify-self: end;
  }
</style>