---
export interface IIntroductionProps {
  firstName: string;
  lastName: string;
  roleMain: string;
  roleSub: string;
}
const { firstName, lastName, roleMain, roleSub } = Astro.props;
---

<section class="section-name">
  <div class="container-name">
    <span class="name one">{firstName}</span>
    <span class="name two">{lastName}</span>
    <span class="role one">{roleMain}</span>
    <span class="role two">{roleSub}</span>
    <span class="fake-border"></span>
  </div>
</section>

<style>
  section {
    display: grid;
    justify-items: center;
  }

  .container-name {
    display: grid;
    justify-items: center;
    text-align: center;
    padding-bottom: 1rem;
    width: 90%;
    transform-style: preserve-3d;
    perspective: 300;
    transform: rotateX(50deg);
    animation: separateName 2.5s 1 ease-in-out 0.35s alternate both;
  }

  @keyframes separateName {
    0% {
      transform: rotateX(90deg);
    }

    100% {
      transform: rotateX(50deg);
    }
  }

  @keyframes glitchName {
    0% {
      font-style: italic;
      font-family: JostMedium;
      line-height: 1;
    }

    15% {
      text-decoration: line-through;
      text-transform: lowercase;
    }

    30% {
      text-decoration: wavy;
      color: white;
    }

    65% {
      text-decoration: underline;
      text-transform: capitalize;
    }

    80% {
      text-decoration-style: solid;
      font-style: italic;
      text-transform: uppercase;
    }

    100% {
      font-family: JostMedium;
      text-transform: uppercase;
      line-height: 1;

    }
  }

  @keyframes secondGlitchName {
    0% {
      text-transform: lowercase;
      line-height: 1.1;
    }

    15% {
      text-decoration: line-through;
      text-transform: lowercase;
    }

    30% {
      text-decoration: underline;
      text-transform: capitalize;
    }

    65% {
      text-decoration: wavy;
      color: rgb(172, 147, 147);
    }

    80% {
      text-decoration-style: solid;
      font-style: italic;
      text-transform: uppercase;
    }

    100% {
      line-height: 1.1;
      text-transform: uppercase;
      color: var(--bg-color-lighter-sub);
    }
  }


  .container-name>span {
    text-align: center;
    font-size: var(--font-size-xl);
    line-height: 1.2;
    letter-spacing: 0.02em;
    transform: rotateX(310deg) rotateY(1deg);
    color: var(--color-text);
  }


  .name.one {
    padding-right: 5em;
    animation: glitchName 0.9s 3 ease-in-out 3s alternate both;
  }

  .name.two {
    padding-right: 3em;
    animation: glitchName 0.9s 3 ease-in-out 3s alternate both;
  }

  .role.one {
    padding-right: 1.7em;
    animation: secondGlitchName 0.9s 3 ease-in-out 3s alternate both;
  }

  .container-name>.role.two {
    padding-right: 1em;
    line-height: 1;
    animation: secondGlitchName 0.9s 3 ease-in-out 3s alternate both;
  }
</style>