---
import AboutDescription from "./AboutDescription.astro";
import AboutSkills from "./AboutSkills.astro";

// Assets
import reactLogo from "/skills_assets/react_logo.svg";
import jestLogo from "/skills_assets/jest_logo.svg";
import typescriptLogo from "/skills_assets/typescript_logo.svg";
import firebaseLogo from "/skills_assets/firebase_logo.svg";
import javascriptLogo from "/skills_assets/javascript_logo.svg";
import htmlLogo from "/skills_assets/html5_logo.svg";
import cssLogo from "/skills_assets/css3_logo.svg";
import linuxLogo from "/skills_assets/linux_logo.svg";
import gitLogo from "/skills_assets/git_logo.svg";

export interface IAboutProps {}
const skills = [
  "ReactJS",
  "TypeScript",
  "Jest",
  "Firebase",
  "JavaScript",
  "HTML5",
  "CSS3",
  "Git",
  "Linux",
];
const logos = [
  reactLogo,
  typescriptLogo,
  jestLogo,
  firebaseLogo,
  javascriptLogo,
  htmlLogo,
  cssLogo,
  linuxLogo,
  gitLogo,
];
---

<div id="about-section" class="about-container">
  <h2 class="about about-header">About.</h2>
  <AboutDescription />
  <div class="about about-competencies">
    <div class="about competencies-header">
      <h2>Competencies</h2>
      <hr />
    </div>

    <div class="about skills-container">
      {
        skills.map((skill, i) => {
          return <AboutSkills skill={skill} logo={logos[i]} />;
        })
      }
    </div>
  </div>
</div>

<style>
  @media (min-width: 1251px) {
    .about-container {
      margin-bottom: 6em;
    }
  }

  @keyframes flipDiv {
    0% {
      transform: perspective(1500px) rotateY(90deg);
      opacity: 0;
    }

    100% {
      transform: perspective(3000px) rotateY(0deg);
      opacity: 1;
    }
  }

  .about-header {
    font-size: calc(var(--font-size-xl) - 1em);
  }

  .skills-container {
    display: grid;
    grid-template-columns: repeat(9, minmax(100px, 1fr));
    justify-items: center;
  }

  @media (max-width: 1250px) {
    .skills-container {
      grid-template-columns: repeat(3, minmax(100px, 1fr));
      grid-template-rows: repeat(3, minmax(100px, 1fr));
      gap: 1em;
    }
  }

  .about-competencies {
    position: relative;
    text-align: center;
    z-index: 1;
  }

  .competencies-header {
    position: relative;
  }

  .competencies-header > h2 {
    background-color: white;
    width: fit-content;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--bg-color-main);
    padding: 0 0.5em;
    letter-spacing: 0.05em;
  }

  .competencies-header > hr {
    position: absolute;
    width: 100%;
    top: 27.5%;
    z-index: -1;
    border: 1px solid var(--color-text-alt);
  }
</style>
