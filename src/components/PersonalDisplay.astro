---
export interface IPersonalProps {
  noun: string;
  description: string;
  videoSrc: string;
}
const { noun, description, videoSrc } = Astro.props;

---

<div class="container personal">
  <div class="personal noun-container">
    <p>
      I am a {noun}
    </p>
  </div>
  <div class="personal video-container">
    <video class="personal-video" muted src={videoSrc}>
      <source src={videoSrc} type="video/mp4">
    </video>
  </div>
  <div class="personal description-container">
    <p>
      {description}
    </p>
  </div>
</div>


<style>
  .video-container {
    /* max-width: 100%; */
  }

  .video-container>video {
    object-fit: cover;
  }
</style>